<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Star Wars Enciclopedia</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

<style>

body {
  background-color: #000000;
  color: #ffa500;
  font-family: var(--font-family, 'Montserrat', 'Poppins', sans-serif);
}
header {
  background-color: #000000;
  border-bottom: 2px solid #ffa500;
}
header a {
  color: #ffa500;
}
.form-control {
  background-color: #222;
  border: 1px solid #ffa500;
  color: #ffa500;
}
.form-control::placeholder {
  color: #ffbb33;
}
.form-control:focus {
  background-color: #111;
  border-color: #ff8800;
  box-shadow: 0 0 6px #ffa500;
  color: #ffa500;
}
.btn-outline-secondary {
  border-color: #ffa500;
  color: #ffa500;
}
.btn-outline-secondary:hover {
  background-color: #ffa500;
  color: #000;
}
.album {
  background-color: #000;
}
.card-img-top {
  height: 400px;      
  width: 100%;
  object-fit: contain; 
  background-color: #000; 
  border-bottom: 1px solid #ffa500;
  padding: 10px;       
}
.card {
  background-color: #111;
  border: 1px solid #ffa500;
  color: #ffa500;
  transition: transform 0.2s, box-shadow 0.2s;
}
.card:hover {
  transform: scale(1.03);
  box-shadow: 0 0 20px #ffa500;
}

.card-title a {
  color: #ffa500;
}
.card-title a:hover {
  color: #ffcc66;
}

.pagination .page-link {
  background-color: #111;
  border-color: #ffa500;
  color: #ffa500;
}
.pagination .page-item.active .page-link {
  background-color: #ffa500;
  color: #000;
  border-color: #ffa500;
}
.pagination .page-link:hover {
  background-color: #ff8800;
  color: #000;
}
.text-muted {
  color: #ffcc66 !important;
}
.container{
    background-color: #000000;
}
</style>
</head>
<body>
<header class="py-3 mb-4 border-bottom">
    <div class="container d-flex flex-wrap justify-content-between align-items-center">
  <a href="/" class="d-flex align-items-center mb-2 mb-md-0 text-dark text-decoration-none">
  <img src="/assets/Star_Wars_Logo.svg.png" alt="Star Wars Logo" width="100" height="60" class="me-2">
  </a>
  <h1>Star Wars Enciclopedia</h1>
    <form class="col-12 col-md-4 mb-2 mb-md-0" action="/search" method="get">
    <div class="input-group">
  <input name="q" type="search" class="form-control" placeholder="Search your character..." value="<%= typeof q !== 'undefined' ? q : '' %>">
    <button class="btn btn-outline-secondary" type="submit">Scan the Galaxy</button>
    </div>
    </form>
    </div>

</header>
    <main>
    <div class="album py-4">
    <div class="container">
        <% if (characters.length === 0) { %>
    <div class="alert alert-warning text-center">The Force could not locate this character<% if (typeof q !== 'undefined' && q) { %> "<%= q %>"<% } %>.</div>
        <% } else { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% characters.forEach(function(c){ %>
    <div class="col">
    <div class="card shadow-sm">
        <% if (c.image) { %>
    <img src="<%= c.image %>" class="bd-placeholder-img card-img-top" alt="<%= c.name %>">
        <% } else { %>
    <svg class="bd-placeholder-img card-img-top" width="100%" height="160" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect></svg>
        <% } %>
    <div class="card-body">
    <h5 class="card-title"><a href="/characters/<%= c.id %>" class="stretched-link text-decoration-none"><%= c.name %></a></h5>
    </div></div></div>
        <% }); %>
    </div>
        <% } %>
    <nav aria-label="Page navigation" class="mt-4">
    <ul class="pagination justify-content-center">
        <% const prevPage = page - 1; %>
        <% const baseUrl = (typeof q !== 'undefined' && q) ? ('/search?q=' + encodeURIComponent(q) + '&') : '?'; %>
            <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
            <a class="page-link" href="<%= baseUrl %>page=<%= prevPage %>&perPage=<%= perPage %>" aria-label="Previous"><span aria-hidden="true">&laquo;</span>
            </a>
            </li>
            <% const delta = 2; const start = Math.max(1, page - delta); const end = Math.min(totalPages, page + delta); %>
            <% for (let p = start; p <= end; p++) { %>
            <li class="page-item <%= p === page ? 'active' : '' %>">
            <a class="page-link" href="<%= baseUrl %>page=<%= p %>&perPage=<%= perPage %>"><%= p %></a>
            </li>
            <% } %>
            <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="<%= baseUrl %>page=<%= page + 1 %>&perPage=<%= perPage %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            </a>
            </li>
    </ul>
    </nav>
<div class="text-center mt-3 text-muted">Page <%= page %> of <%= totalPages %></div>
</div>
</div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
